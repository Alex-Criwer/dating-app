<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="8dp"
    android:layout_marginTop="16dp">

    <TextView
        android:id="@+id/message"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/background_my_message"
        android:layout_marginHorizontal="8dp"
        android:padding="12sp"
        android:text="This is a Message fnfjnfkvfnjvnfjvnnnv v v v v vvbvbvbvbvbvbbv"
        android:textColor="@color/primary_white"
        android:textSize="16sp"
        app:layout_constraintWidth_max="wrap"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.9"
        android:textAppearance="@style/MainFontStyle.Medium"/>

    <TextView
        android:id="@+id/timestamp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="10:00"
        android:textColor="@color/chat_gray"
        android:textSize="10sp"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@+id/message"
        app:layout_constraintEnd_toEndOf="@+id/message" />

</androidx.constraintlayout.widget.ConstraintLayout>
